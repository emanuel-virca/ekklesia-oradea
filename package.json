{
  "name": "ekklesia-oradea",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --configuration=development",
    "docker-start": "ng serve --configuration=development --host 0.0.0.0",
    "build": "ng build",
    "build-prod": "ng build --configuration=production --prod",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "deploy": "npm run build-prod && firebase deploy",
    "deploy-functions": "firebase deploy --only functions",
    "deploy-hosting": "npm run build-prod && firebase deploy --only hosting",
    "stats": "webpack-bundle-analyzer dist/ekklesia-oradea/stats.json",
    "build-stats": "ng build --configuration=production --prod --stats-json && npm run stats"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "{src,e2e,cypress}/**/*.{ts,json,md,scss}": [
      "prettier --write",
      "git add"
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^7.2.15",
    "@angular/cdk": "^7.3.7",
    "@angular/common": "^7.2.15",
    "@angular/compiler": "^7.2.15",
    "@angular/core": "^7.2.15",
    "@angular/fire": "^5.1.3",
    "@angular/flex-layout": "^7.0.0-beta.23",
    "@angular/forms": "^7.2.15",
    "@angular/http": "^7.2.15",
    "@angular/material": "^7.3.7",
    "@angular/platform-browser": "^7.2.15",
    "@angular/platform-browser-dynamic": "^7.2.15",
    "@angular/pwa": "^0.13.8",
    "@angular/router": "^7.2.15",
    "@angular/service-worker": "^7.2.15",
    "@netbasal/content-loader": "^2.0.0",
    "@ngrx/effects": "^7.4.0",
    "@ngrx/store": "^7.4.0",
    "@ngrx/store-devtools": "^7.4.0",
    "algoliasearch": "^3.32.0",
    "core-js": "^2.6.5",
    "firebase": "^5.8.3",
    "ngx-infinite-scroll": "^7.1.0",
    "ngx-masonry": "^1.1.2",
    "rxjs": "^6.5.2",
    "tslib": "^1.9.3",
    "zone.js": "^0.8.29"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.13.9",
    "@angular/cli": "^7.3.9",
    "@angular/compiler-cli": "^7.2.15",
    "@angular/language-service": "^7.2.15",
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@types/algoliasearch": "^3.30.1",
    "@types/jasmine": "~3.3.5",
    "@types/jasminewd2": "~2.0.6",
    "@types/node": "~10.12.18",
    "codelyzer": "~4.5.0",
    "firebase-tools": "^6.9.2",
    "husky": "^1.3.1",
    "jasmine-core": "~3.3.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "^4.0.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.4",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "lint-staged": "^8.1.4",
    "prettier": "^1.16.4",
    "protractor": "^5.4.2",
    "standard-version": "5.0.0",
    "ts-node": "~7.0.1",
    "tslint": "^5.12.1",
    "typescript": "^3.2.4",
    "webpack-bundle-analyzer": "^3.3.2"
  }
}
