{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": []
  },
  "files": ["src/main.ts", "src/polyfills.ts"],
  "include": ["src/**/*.ts"],
  "paths": {
    "@env/*": ["environments/*"],
    "@core/*": ["app/core/*"],
    "@shared/*": ["app/shared/*"],
    "@admin/*": ["app/admin/*"],
    "@web-portal/*": ["app/web-portal/*"],
    "@root-state": ["app/reducers"],
    "@authentication/*": ["app/authentication/*"],
    "@account/*": ["app/account/*"]
  }
  // "angularCompilerOptions": { "enableIvy": true }
}
